.mx-auto.pagination.d-flex.align-items-center.justify-content-center
  .btn-group
    button.btn.btn-light.btn-sm.shadow
      i.fas.fa-chevron-left
    button.btn.btn-light.btn-sm.shadow
      i.fas.fa-step-backward
  .my-page-link.active 1
  for i in [2,3,4]
    .my-page-link #{i}
  .my-page-link ...
  for i in [5,6,7,8]
    .my-page-link #{i}
  .btn-group
    button.btn.btn-light.btn-sm.shadow
      i.fas.fa-chevron-right
    button.btn.btn-light.btn-sm.shadow
      i.fas.fa-step-forward