extends ./layout/layout.pug

block content
  
  .nav.tgee-tabs.justify-content-center.shadow.f-16
    .item.mx-2.p-1.position-absolute(style="left: 0;") 最新消息
    .item.mx-2.p-1(data-toggle="tab" href="#nav-a") 官方消息
    .item.mx-2.p-1(data-toggle="tab" href="#nav-b") 產業訊息

  .tab-content.container.py-5
    .fade.tab-pane#nav-a
      h1 官方消息
      .row
        for i in [1, 2, 3, 4, 1, 2, 3, 4, 1]
          .col-md-4.mt-2
            .tgee-card
              .tgee-card-img(style=`background-image: url('images/首頁/news_bg_${i}.png'); height: 190px;`)
              .tgee-card-body
                h3
                  |創作者的生存遊戲 #1
                  br
                  |畢業後，如何集體創作並且...
                .mt-2.d-flex.align-items-end
                  
                  small 1 小時前更新 
                  .tgee-circle-button
                    i.fas.fa-chevron-right
          
    .fade.tab-pane#nav-b.show.active
      h1 產業訊息
      .row
        for i in [1, 2, 3, 4, 1, 2, 3, 4, 1]
          .col-md-4.mt-2
            .tgee-card
              .tgee-card-img(style=`background-image: url('images/首頁/news_bg_${i}.png'); height: 190px;`)
              .tgee-card-body
                h3
                  |創作者的生存遊戲 #1
                  br
                  |畢業後，如何集體創作並且...
                .mt-2.d-flex.align-items-end
                  small 1 小時前更新
                  .tgee-circle-button
                    i.fas.fa-chevron-right
    
    .py-2.text-center
      button.px-3.btn.btn-outline-dark.rounded-pill 展開看更多
